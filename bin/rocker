#!/usr/bin/env ruby

require "commander/import"
require "docker-rocker"

program :version, '1.0.0'
program :description, 'Build docker-rockers'
default_command :build
always_trace!

command "output" do |c|
  c.name = "rocker output"
  c.syntax = "rocker output [options]"
  c.description = "Output a Dockerfile from a docker-rocker"
  c.option "-f",
           "--file STRING",
           String,
           "File to build. Default: docker-rocker"

  c.when_called do |args, opts|
    puts docker-rocker::Engine.new.render(opts.file)
  end
end

command "build" do |c|
  c.name = "rocker build"
  c.syntax = "rocker build [options]"
  c.description = "Build a docker-rocker"
  c.option "-f",
           "--file STRING",
           String,
           "File to build. Default: docker-rocker"
  c.option "-t",
           "--tag STRING",
           String,
           "Pass through to docker build. Default: <inferred>"
  c.option "--no-tag",
           "Do not tag the docker image. Default: false"

  c.when_called do |args, opts|

    opts.default file: "docker-rocker",
                 tag: nil,
                 no_tag: false

    if opts.no_tag
      tag = ""
    elsif opts.tag
      tag = "-t #{opts.tag}"
    else
      full_tag = "%s/%s" % [ENV["USER"], File.basename(Dir.pwd)]
      full_tag += ":#{$1}" if opts.file =~ /^docker-rocker\-(.+)$/
      tag = "-t #{full_tag}"
    end

    begin
      temp_file = "docker-rocker-#{SecureRandom.hex(4)}"
      File.open(temp_file, "w") do |f|
        f.write docker-rocker::Engine.new.render(opts.file)
      end
      puts "docker build -f #{temp_file} #{tag} ."
      system("docker build -f #{temp_file} #{tag} .")
    ensure
      FileUtils.rm_f(temp_file)
    end
  end
end
